<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mapper.SavedReportMapper">

    <!-- ResultMap 설정: DB에서 조회한 결과를 VO에 매핑 -->
    <resultMap id="SavedReportMap" type="com.example.vo.SavedReportVO">
        <id property="savedReportId" column="SAVED_REPORT_ID"/>
        <result property="userId" column="USER_ID"/>
        <result property="dailyReportId" column="DAILY_REPORT_ID"/>
        <result property="createdAt" column="CREATED_AT"/>
        <result property="updatedAt" column="UPDATED_AT"/>
    </resultMap>

    <!-- 특정 사용자의 저장된 리포트 목록 조회 -->
    <select id="getSavedReportsByUserId" resultMap="SavedReportMap" parameterType="String">
        SELECT * FROM SAVED_REPORT WHERE USER_ID = #{userId}
    </select>

    <!-- 리포트 저장 -->
    <insert id="insertSavedReport" parameterType="com.example.vo.SavedReportVO">
        INSERT INTO SAVED_REPORT (SAVED_REPORT_ID, USER_ID, DAILY_REPORT_ID, CREATED_AT, UPDATED_AT)
        VALUES (#{savedReportId}, #{userId}, #{dailyReportId}, #{createdAt}, #{updatedAt})
    </insert>

    <!-- 리포트 삭제 -->
    <delete id="deleteSavedReport" parameterType="int">
        DELETE FROM SAVED_REPORT WHERE SAVED_REPORT_ID = #{savedReportId}
    </delete>

</mapper>
